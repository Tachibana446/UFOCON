<Window x:Class="UFO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UFO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="メイン">
            <Grid>
                <Button x:Name="stopButton" Content="STOP" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="105" Height="64" Grid.Row="0"/>
                <Button x:Name="CSVFileOpenButton" Content="開く" HorizontalAlignment="Left" Margin="240,164,0,0" VerticalAlignment="Top" Width="75" Click="CSVFileOpenButton_Click"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="CSVファイル"/><Run Text="："/></TextBlock>
                <TextBlock x:Name="CSVFilePathText" HorizontalAlignment="Left" Margin="82,166,0,0" TextWrapping="Wrap" Text="なし" VerticalAlignment="Top" Width="140"/>

                <local:MediaPlayer x:Name="mediaPlayer"  />

            </Grid>
        </TabItem>
        <TabItem Header="シリアルポート">
            <local:PortSelectControl />
        </TabItem>
    </TabControl>
</Window>
