<UserControl x:Class="UFO.GraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UFO"
             mc:Ignorable="d" 
             Width="660" Height="400">
    <DockPanel>
        <Button DockPanel.Dock="Top" HorizontalAlignment="Left" Padding="5,2" Margin="5,2" Click="LoadButton_Click">CSV読み込み</Button>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
        <Canvas x:Name="canvas">
            <Line x:Name="centerLine" X1="5" Y1="200" X2="655" Y2="200" Stroke="Gray" StrokeThickness="2"/>
            </Canvas>
        </ScrollViewer>
    </DockPanel>
</UserControl>
